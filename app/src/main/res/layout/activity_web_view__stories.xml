<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stories.webView_Anbyaa_Stories"
    android:background="@drawable/webanbyaa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">
        <TextView
            android:id="@+id/tv_anbyaa_storyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قصة أدم"
            android:textSize="30dp"
           android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="34dp"
            android:textColor="#672D0D"
            android:textStyle="bold"
            />

        <WebView
            android:id="@+id/webView__anbyaa_stories"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_margin="25dp"
            android:layout_below="@id/tv_anbyaa_storyName"

            android:layout_marginTop="-25dp" />

    </RelativeLayout>

    <LinearLayout
android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:thumbTint="#672D0D"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">
            <ImageView
                android:id="@+id/btn_before"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:src="@drawable/ic_replay_10_black_24dp"
                android:layout_marginLeft="25dp"
                />
            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:src= "@drawable/ic_pause_black_24dp"
                android:layout_marginLeft="120dp"
                />
            <ImageView
                android:id="@+id/btn_after"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_forward_10_black_24dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>