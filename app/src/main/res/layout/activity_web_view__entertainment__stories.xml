<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stories.webView_Entertainment_Stories"
    android:background="@color/colorAccent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">
        <TextView
            android:id="@+id/tv_enter_storyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الثغلب"
            android:textSize="30dp"
           android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/holo_red_dark"
            />
        <WebView
            android:id="@+id/webView__enter_stories"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_below="@id/tv_enter_storyName"
            />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_below="@+id/webView__anbyaa_stories"
        android:layout_height="120dp"
        app:cardBackgroundColor="#D5D2D2"
        app:cardElevation="25dp"
        android:layout_alignParentBottom="true"
        tools:ignore="NotSibling">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="currentTime" />
                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="180dp"
                    android:textSize="20dp"
                    android:text="tootalTime" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/btn_before"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_replay_10_black_24dp"
                    android:layout_marginLeft="25dp"
                    />
                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:src= "@drawable/ic_pause_black_24dp"
                    android:layout_marginLeft="120dp"
                    />
                <ImageView
                    android:id="@+id/btn_after"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_forward_10_black_24dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>