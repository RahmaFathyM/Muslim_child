<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/t"
    tools:context=".stories.webView_Educational_Stories">
    <RelativeLayout
        android:id="@+id/title_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">
        <TextView
            android:id="@+id/tv_edu_storyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قصة ثمرة الإحسان"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            />
        <WebView
            android:id="@+id/webView__edu_stories"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_below="@id/tv_edu_storyName"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titles_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_web"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="currentTime"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:text="tootalTime"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/titles_seek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/btn_before"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/ic_replay_10_black_24dp" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/ic_pause_black_24dp" />

        <ImageView
            android:id="@+id/btn_after"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/ic_forward_10_black_24dp" />
    </LinearLayout>

</RelativeLayout>