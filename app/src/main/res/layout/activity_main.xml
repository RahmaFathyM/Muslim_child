<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/design">

    <ImageView
        android:id="@+id/btn_quran"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/quran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/btn_stories"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_quran"
        android:outlineSpotShadowColor="#000"
        android:paddingTop="35dp"
        android:src="@drawable/qassas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/btn_azkar"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_stories"
        android:src="@drawable/azkaar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/btn_anasheed"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_azkar"
        android:src="@drawable/anasheed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>